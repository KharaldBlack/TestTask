@model TestTask.ViewModels.EmployeeViewModel

<h2>Добавить сотрудника</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">ФИО</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Телефонный номер</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PositionID" class="control-label">Должность</label>
        <select asp-for="PositionID" class="form-control">
            @if (ViewBag.PositionID != null)
            {
                foreach (var position in (SelectList)ViewBag.PositionID)
                {
                    <option value="@position.Value">@position.Text</option>
                }
            }
        </select>
        <span asp-validation-for="PositionID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Photo">Фото</label>
        <input type="file" name="photo" class="form-control-file" />
    </div>
    <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
