@model TestTask.ViewModels.EmployeeViewModel

<h2>Редактировать сотрудника</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="EmployeeID" />

    <div class="form-group">
        <label asp-for="FullName" class="control-label">ФИО</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Телефонный номер</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PositionID" class="control-label">Должность</label>
        <select asp-for="PositionID" class="form-control" asp-items="ViewBag.PositionID"></select>
        <span asp-validation-for="PositionID" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="Photo">Загрузить новое фото (опционально)</label>
        <input type="file" name="photo" class="form-control-file" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
